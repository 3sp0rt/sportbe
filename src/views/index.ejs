<!DOCTYPE html>
<html lang="en">
   
<head>
  <meta charset="utf-8">
  <title> <%= titulo %> </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('partials/head') %>
</head>

<body>
  <header class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="d-flex flex-column justify-content-center align-items-center">
        <% if(hay){ %>

          <!-- Imagen -->
          <% if(imagen == '*'){ %>
            <img src="img/portada.png" alt="Home" class="rounded-pill w-25">
          <% } else { %>
            <img src="images/<%= imagen %>" alt="Home" class="imagen rounded img-fluid">
          <% } %>
        
          <!-- TÃ­tulo -->
          <p class="my-1 fw-bold my-3">
            <%= tit %>
          </p>
        
          <!-- Acceso a la encuesta -->
          <%- include('partials/navsurvey', {idurl: idurl, idioma: idioma}) %>

          <!-- Acceso a los resultados -->
          <% if(visible == 'S'){ %>
            <%- include('partials/navresul', {idurl: idurl, idioma: idioma}) %>  
          <% } %>

        <% } else {%>  
          <div class="alert alert-success my-4" role="alert">
            No n'hi ha enquestes actualment..
          </div>
        <% } %>

        <!-- Acceso a cambio de password -->
        <% if(navPasw){ %>
          <%- include('partials/navpassw', {idioma: idioma}) %>
        <% } %>

        <!-- Mensaje adicional de la encuesta -->
        <% if(hay){ %>
          <%- include('partials/footer', {msj: adic}) %>
        <% } %>
    </div>
</header>

</body>
</html>